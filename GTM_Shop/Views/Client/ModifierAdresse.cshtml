@model GTM_Shop.Metier.Adresse
@{
    ViewBag.Title = "ModifierAdresse";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}


@using (Html.BeginForm("ModifierAdresse", "Client", FormMethod.Post))
{
    <div class="formulaire">

        <span>Remplir le formulaire pour modifier votre adresse</span><br /><br />

        @Html.HiddenFor(model => model.idAdresse)

        <span>@Html.DisplayNameFor(model => model.RueLigne01) :</span>
        <span>@Html.TextBoxFor(model => model.RueLigne01, new { @class = "form-control left-rounded right-rounded" }) @Html.ValidationMessageFor(model => model.RueLigne01, "", new { @class = "text-danger" })</span><br />

        <span>@Html.DisplayNameFor(model => model.RueLigne02) : </span>
        <span>@Html.TextBoxFor(model => model.RueLigne02, new { @class = "form-control left-rounded right-rounded" }) @Html.ValidationMessageFor(model => model.RueLigne02, "", new { @class = "text-danger" })</span><br />

        <span>@Html.DisplayNameFor(model => model.CodePostale) : </span>
        <span>@Html.TextBoxFor(model => model.CodePostale, new { @class = "form-control left-rounded right-rounded" }) @Html.ValidationMessageFor(model => model.CodePostale, "", new { @class = "text-danger" })</span><br />

        <span>@Html.DisplayNameFor(model => model.Ville) : </span>
        <span>@Html.TextBoxFor(model => model.Ville, new { @class = "form-control left-rounded right-rounded" }) @Html.ValidationMessageFor(model => model.Ville, "", new { @class = "text-danger" })</span><br />

        <span>@Html.DisplayNameFor(model => model.Pays) : </span>
        <span>@Html.TextBoxFor(model => model.Pays, new { @class = "form-control left-rounded right-rounded" }) @Html.ValidationMessageFor(model => model.Pays, "", new { @class = "text-danger" })</span><br />



        <button class="btn btn-warning bouton" type="submit">Modifier</button>
        <br />
    </div>
}

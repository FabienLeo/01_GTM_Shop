@model GTM_Shop.Metier.Catalogue
@{
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
    ViewBag.Title = "ModifierCatalogue";
}


@using (Html.BeginForm("ModifierCatalogue", "Catalogue", FormMethod.Post))
{
    <div class="formulaire">
    <span>Remplir le formulaire pour modifier le Catalogue :</span><br /><br />
    @Html.HiddenFor(model => model.idCatalogue)

   
        <span>@Html.DisplayNameFor(model => model.NomCatalogue) : </span>
        <span>@Html.TextBoxFor(model => model.NomCatalogue, new { @class = "form-control left-rounded right-rounded" }) @Html.ValidationMessageFor(model => model.NomCatalogue, "", new { @class = "text-danger" })</span><br />

        <button class="btn btn-warning bouton" type="submit">Modifier</button>
        <br />
        </div>
}
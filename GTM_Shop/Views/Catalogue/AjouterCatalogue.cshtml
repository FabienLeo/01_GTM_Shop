@model  GTM_Shop.Metier.Catalogue
@{
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
    ViewBag.Title = "AjouterCatalogue";
}


@using (Html.BeginForm("AjouterCatalogue", "Catalogue", FormMethod.Post))
{
    <div class="formulaire">
        <span>Remplir le formulaire pour ajouter un Catalogue :</span><br /><br />
        <span>@Html.DisplayNameFor(model => model.NomCatalogue) : </span>
        <span>@Html.TextBoxFor(model => model.NomCatalogue, new { @class = "form-control left-rounded right-rounded" }) @Html.ValidationMessageFor(model => model.NomCatalogue, "", new { @class = "text-danger" })</span><br />

        <button class="btn btn-success bouton" type="submit">Ajouter</button>
        <br />
    </div>
}

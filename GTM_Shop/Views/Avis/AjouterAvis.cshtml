@model GTM_Shop.Metier.Avis
@{
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
    ViewBag.Title = "AfficherProduit";
}



<br /><br /><br />


<img id="Img_Fiche_Produit" src="~/Content/images/@ViewBag.Visuel" height="400px" class="Img_produit" />



<div class="Fiche_produit">
    <br />
    <h2>
        <strong>@ViewBag.NomProduit</strong>
    </h2>

 

@using (Html.BeginForm("AjouterAvis", "Avis", FormMethod.Post))
{
        <span>Remplir le formulaire pour ajouter un avis :</span><br /><br />
        @Html.HiddenFor(model => model.idUtilisateur)
        @Html.HiddenFor(model => model.idProduit)


        <span>@Html.DisplayNameFor(model => model.NoteAvis) : </span>
        <span>@Html.TextBoxFor(model => model.NoteAvis, new { @class = "form-control left-rounded right-rounded", type="number" }) @Html.ValidationMessageFor(model => model.NoteAvis, "", new { @class = "text-danger" })</span><br />

        <span>@Html.DisplayNameFor(model => model.TextAvis) : </span>
        <span>@Html.TextBoxFor(model => model.TextAvis, new { @class = "form-control left-rounded right-rounded"}) @Html.ValidationMessageFor(model => model.TextAvis, "", new { @class = "text-danger" })</span><br />


        <br /><br />


        <button class="btn btn-success bouton" type="submit">Ajouter</button>


}

</div>